<h2>User info</h2>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <p>name：<%= current_user.name %></p>
  <p>introduction：<%= current_user.introduction %></p>
  <p><%= link_to 'edit', edit_user_path(current_user.id) %></p>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<% @books.each do |book| %>
  <div>
    <%= link_to user_path(current_user.id)  do %>
    <p><%= image_tag 'sample-author1.jpg' %></p>
    <% end %>
    <p>Title：
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
    </p>
    <p>Opinion：<%= book.body %></p>
  </div>

<% end %>