<h2>User info</h2>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <p>name：<%= current_user.name %></p>
  <p>introduction：<%= current_user.introduction %></p>
  <p><%= link_to 'edit', edit_user_path(current_user.id) %></p>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
    <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
    <p>Title：<%= book.title %></p>
    <p>Opinion：<%= book.body %></p>
  </div>

<% end %>
