

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @book_new , user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
           <%= link_to user_path(@book.user.id) do %>
             <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
             <p><%= @book.user.name %></p>
           <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <p><%= @book.title %></p>
            <% end %>
          </td>
          <td><p><%= @book.body %></p></td>
          <% if @book.user == current_user %>
          <td>
            <%= link_to  edit_book_path(@book), class: "btn btn-success btn-sm btn-block" do %>
              <span>Edit</span>
            <% end %>
          </td>
          <td>
            <%= link_to  book_path(@book), method: :delete, class: "btn btn-success btn-sm btn-block" do %>
              <span>Destroy</span>
            <% end %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>


