
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>Editing book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="form-group">
  <label for="inputTitle">Title</label><br />
  <%=f.text_field :title, autofocus: true, id:"inputTitle" %>
  <div class="form-group">
  <label for="inputOpinion">Opinion</label><br />
  <%= f.text_area :body, autofocus: true, id:"inputOpinion" %>
  </div>
  <div class="form-group">
    <a class="btn btn-success">
      <%= f.submit "Update Book" %>
    </a>
  </div>
  <% if @book.user == current_user %>
    <p><%= link_to "show", book_path(@book.id) %><a>|</a><%= link_to "back", books_path %></p>
  <% end %>
<% end %>
