
  <h2>User info</h2>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <table class="table">
    <tbody>
      <tr>
      </tr>
      <tr>
	      <th>name</th>
	      <th><%= user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <p class="btn btn-outline-secondary btn-block">
      <%= link_to  edit_user_path(user.id) do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </p>
  </div>
  <h2 class="mt-3">New book</h2>
   <%= form_with model: book do |f| %>
  <div class="form-group">
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
  </div>
  <div class="btn btn-success"><%= f.submit 'Create Book' %></div>
   <% end %>
